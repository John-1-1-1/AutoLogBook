
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="line">
            <stroke
                android:color="#ffffff"
                android:width="5dp" />
        </shape>
    </item>
    <item>
        <rotate  android:fromDegrees="90">
            <shape
                android:shape="line">
                <stroke
                    android:color="#ffffff"
                    android:width="5dp" />
            </shape>
        </rotate>
    </item>
</layer-list>